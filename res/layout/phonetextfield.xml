<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" android:weightSum="1" android:background="#ffffffff">

    <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:id="@+id/pcodeImageView" android:layout_marginLeft="16dp" android:layout_marginTop="8dp"
            android:background="@drawable/cn" android:baselineAlignBottom="false"
            android:layout_gravity="center_vertical"/>
    <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="86"
            android:id="@+id/phonecode" android:layout_marginTop="8dp" android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal" android:layout_marginLeft="8dp"/>
    <EditText
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inputType="phone"
            android:ems="10"
            android:hint="请输入手机号"
            android:id="@+id/phone" style="@android:style/Theme.Light.NoTitleBar"
            android:background="@null" android:layout_gravity="center_vertical" android:gravity="center_vertical"/>
</LinearLayout>