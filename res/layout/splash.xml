<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView" android:layout_alignParentLeft="true"
            android:layout_marginLeft="0dp" android:layout_alignParentRight="true" android:src="#ff3eb83e"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2" android:layout_alignParentTop="false"
            android:layout_marginTop="0dp" android:layout_centerInParent="true" android:src="@drawable/logo"
            android:contentDescription="" android:layout_alignWithParentIfMissing="true"/>
</RelativeLayout>